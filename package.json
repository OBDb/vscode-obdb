{
  "name": "obdb-tooling",
  "displayName": "OBDb tooling",
  "description": "OBDb signal editing tooling.",
  "publisher": "clutchengineering",
  "version": "0.1.2",
  "engines": {
    "vscode": "^1.60.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile"
  },
  "contributes": {
    "capabilities": {
      "hoverProvider": "true",
      "decorationProvider": "true"
    },
    "commands": [
      {
        "command": "obdb.showBitmapVisualization",
        "title": "Show Bitmap Visualization",
        "category": "OBDb"
      }
    ],
    "keybindings": [
      {
        "command": "obdb.showBitmapVisualization",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorLangId == json"
      }
    ],
    "languages": [
      {
        "id": "json",
        "extensions": [
          ".json"
        ]
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^18.x",
    "@types/vscode": "^1.60.0",
    "typescript": "^4.6.3"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "canvas": "^3.1.0"
  }
}
