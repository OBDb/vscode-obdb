{
  "name": "obdb-tooling",
  "displayName": "OBDb tooling",
  "description": "OBDb signal editing tooling.",
  "publisher": "clutchengineering",
  "version": "0.1.13",
  "repository": {
    "type": "git",
    "url": "https://github.com/OBDb/vscode-obdb.git"
  },
  "engines": {
    "vscode": "^1.60.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json",
    "onLanguage:yaml"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "pretest": "npm run compile"
  },
  "contributes": {
    "capabilities": {
      "hoverProvider": "true",
      "decorationProvider": "true"
    },
    "commands": [
      {
        "command": "obdb.showBitmapVisualization",
        "title": "Show Bitmap Visualization",
        "category": "OBDb"
      },
      {
        "command": "obdb.runTest",
        "title": "Run Test",
        "category": "OBDb"
      },
      {
        "command": "obdb.debugTest",
        "title": "Debug Test",
        "category": "OBDb"
      }
    ],
    "keybindings": [
      {
        "command": "obdb.showBitmapVisualization",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorLangId == json"
      }
    ],
    "languages": [
      {
        "id": "json",
        "extensions": [
          ".json"
        ]
      },
      {
        "id": "yaml",
        "extensions": [
          ".yaml",
          ".yml"
        ]
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": ["signalsets/v3/*.json"],
        "url": "https://raw.githubusercontent.com/OBDb/.schemas/refs/heads/main/signals.json"
      }
    ]
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^18.x",
    "@types/vscode": "^1.60.0",
    "ts-loader": "^9.5.2",
    "typescript": "^4.6.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "canvas": "^3.1.0",
    "js-yaml": "^4.1.0",
    "jsonc-parser": "^3.2.0",
    "yaml": "^2.3.4"
  }
}
